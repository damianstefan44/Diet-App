<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dietCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/diet_app_main_color_darkest"
    android:layout_height="25dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dietLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/dietLabelName"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="Nazwa"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/dietLabelCalories"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="128dp"
            android:text="Kalorie"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/dietLabelLoad"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="Do"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/dietLabelEdit"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="Ed"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/dietLabelDelete"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="Us"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>