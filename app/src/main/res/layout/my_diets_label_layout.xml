<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dietCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/diet_app_main_color_bright"
    android:layout_height="25dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/dietLabelWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/dietLabelLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/dietLabelLoad"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/dietLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:maxWidth="90dp"
                android:textSize="10dp"
                android:text="  Nazwa"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/dietLabelCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="         Kalorie"
                android:textStyle="bold"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/dietLabelLoad"
            android:layout_width="33dp"
            android:layout_height="24dp"
            android:textSize="10dp"
            android:text="Do"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/dietLabelEdit"
             />

        <TextView
            android:id="@+id/dietLabelEdit"
            android:layout_width="33dp"
            android:layout_height="24dp"
            android:textSize="10dp"
            android:text="Ed"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/dietLabelDelete"
             />

        <TextView
            android:id="@+id/dietLabelDelete"
            android:layout_width="33dp"
            android:layout_height="24dp"
            android:textSize="10dp"
            android:text="Us"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
             />


    </RelativeLayout>

</androidx.cardview.widget.CardView>