<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchedProductsCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="50dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/searchedProductsWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/searchedProductsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/favouriteProductsDelete"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/searchedProductsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_weight="3"
                android:maxWidth="90dp"
                android:textSize="10dp"
                android:text="nazwa df d fd fd fd fd fd fd f fffffffffffffffffff " />

            <TextView
                android:id="@+id/searchedProductsProteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="50 g"
                />
            <TextView
                android:id="@+id/searchedProductsFats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="124 g"
                />
            <TextView
                android:id="@+id/searchedProductsCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="99 g"
                />

            <TextView
                android:id="@+id/searchedProductsCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="12000 kcal"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/searchedProductsAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            app:srcCompat="@android:drawable/ic_input_add" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>