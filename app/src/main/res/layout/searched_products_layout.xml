<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchedProductsCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="50dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchedProductsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/searchedProductsName"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="Produkt"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchedProductsProteins"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="133dp"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="50 g"
            />
        <TextView
            android:id="@+id/searchedProductsFats"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="168dp"
            android:textStyle="bold"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="124 g"
            />
        <TextView
            android:id="@+id/searchedProductsCarbs"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="205dp"
            android:textStyle="bold"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="99 g"
            />

        <TextView
            android:id="@+id/searchedProductsCalories"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="240dp"
            android:textStyle="bold"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="12000 kcal"
            />

        <ImageView
            android:id="@+id/searchedProductsAdd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>