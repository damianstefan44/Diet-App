<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favouriteProductsLabelCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/diet_app_main_color_darkest"
    android:layout_height="25dp"
    android:focusable="true"
    android:clickable="false"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favouriteProductsWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/favouriteProductsLabelName"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="Nazwa"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/favouriteProductsLabelProteins"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="133dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="B"
            />
        <TextView
            android:id="@+id/favouriteProductsLabelFats"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="168dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="T"
            />
        <TextView
            android:id="@+id/favouriteProductsLabelCarbs"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="205dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="W"
            />

        <TextView
            android:id="@+id/favouriteProductsLabelCalories"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="240dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Kalorie"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>