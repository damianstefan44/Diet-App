<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favouriteProductsLabelCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/diet_app_main_color_bright"
    android:layout_height="25dp"
    android:focusable="true"
    android:clickable="false"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/favouriteProductsLabelWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/favouriteProductsLabelLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/favouriteProductsLabelDelete"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/favouriteProductsLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:textStyle="bold"
                android:maxWidth="90dp"
                android:textSize="10dp"
                android:text="  Nazwa" />

            <TextView
                android:id="@+id/favouriteProductsLabelProteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="B"
                />
            <TextView
                android:id="@+id/favouriteProductsLabelFats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="T"
                />
            <TextView
                android:id="@+id/favouriteProductsLabelCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text=" W"
                />

            <TextView
                android:id="@+id/favouriteProductsLabelCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:maxWidth="72dp"
                android:textSize="10dp"
                android:text="   Kalorie"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/favouriteProductsLabelDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_delete"
            app:tint="#FF0000" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>