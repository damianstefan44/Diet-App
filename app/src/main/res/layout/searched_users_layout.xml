<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchedUsersCardView"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="50dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/searchedUsersWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/searchedUsersLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/searchedUsersName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_weight="3"
                android:maxWidth="90dp"
                android:textSize="10dp"
                android:text="nazwa df d fd fd fd fd fd fd f fffffffffffffffffff " />



        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>